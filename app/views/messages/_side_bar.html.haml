.Sidebar
  .LeftHeader
    .LeftHeader__list 
      %h3.LeftHeader__username
        = current_user.name
      %ul.LeftHeader__iconList
        %li.LeftHeader__icon
          =link_to new_group_path do
            = icon('far','edit')
        %li.LeftHeader__icon
          = link_to edit_user_path(current_user) do
            = icon('fas','cog')
  .Grouplist
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group.id), class: "Grouplist" do      
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message